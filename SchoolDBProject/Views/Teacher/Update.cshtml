@model SchoolDBProject.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<h2>Update Teacher</h2>

<nav>
    <a href="/Teacher/Show/@Model.TeacherId">Back</a>
</nav>

<form method="post" action="/Teacher/Update/@Model.TeacherId">
    <div>
        <label for="TeacherFname">First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFname" />
    </div>
    <div>
        <label for="TeacherLname">Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLname" />
    </div>
    <div>
        <label for="EmployeeNum">Employee Number:</label>
        <input type="text" id="EmployeeNum" name="EmployeeNum" value="@Model.EmployeeNum" />
    </div>
    <div>
        <label for="HireDate">Hired On:</label>
        <input type="datetime" id="HireDate" name="HireDate" value="@Model.HireDate" />
    </div>
    <div>
        <label for="Salary">Salary:</label>
        <input type="number" id="Salary" name="Salary" step=".01"  value="@Model.Salary" />
    </div>
    <div>
        <input type="submit" id="submitNewTeacher" name="submit" value="Update Teacher" />
    </div>
</form>